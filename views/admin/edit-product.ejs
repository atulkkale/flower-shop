<%- include('../includes/admin-head.ejs') %>

</head>

<body>

    <div id="wrapper">

        <%- include('../includes/admin-navigation.ejs') %>

        <div id="page-wrapper">

            <div class="container-fluid">

                <!-- Page Heading -->
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            <% if(editing) { %> Edit<% } else { %> Add<% } %> product
                            <small>Subheading</small>
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-file"></i><% if(editing) { %> Edit<% } else { %> Add<% } %> product
                            </li>
                        </ol>
                        <main>
                            <form class="product-form" action="/admin/<% if(editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
                                <div>
                                    <label for="title">Title</label><br>
                                    <input type="text" name="title" id="title" value="<% if(editing){ %><%= product.title %><% } %>"><br>
                                    <label for="price">Price</label><br>
                                    <input type="text" name="price" id="price" value="<% if(editing){ %><%= product.price %><% } %>"><br>
                                    <label for="imageUrl">Image url</label><br>
                                    <input type="text" name="imageUrl" id="imageUrl" value="<% if(editing){ %><%= product.imageUrl %><% } %>"><br>
                                    <!-- <label for="image">Image</label><br>
                                    <input type="file" name="image" id="image"><br> -->
                                    <label for="description">Description</label><br>
                                    <textarea name="description" id="description" cols="30" rows="10"><% if(editing){ %><%= product.description %><% } %></textarea>
                                    <% if(editing) { %>
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <% } %>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                </div>
                        
                                <button type="submit"><% if(editing) { %> Update<% } else { %> Add<% } %> product</button>
                            </form>
                        </main>
                    </div>
                </div>
                <!-- /.row -->

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- jQuery -->
    <script src="/admincss/js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="/admincss/js/bootstrap.min.js"></script>

</body>

</html>
